<!-- PAGE 2: Topic Selection -->
<div id="page2" class="page">
  <h2 id="topicTitle"></h2>
  <h3>Select an area:</h3>
  <button onclick="showTopic('Education')">Education</button>
  <button onclick="showTopic('Climate')">Climate</button>
  <button onclick="showTopic('Safety')">Safety</button>
  <button onclick="showTopic('Accessibility')">Accessibility</button>
  <button onclick="showTopic('Health')">Health</button>
  <br><br>
  <button onclick="speakText('Select a topic like Education or Health')">üîä Voice Assist</button>
