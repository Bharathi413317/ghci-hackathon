<!-- PAGE 3: Query + Voice + Image -->
<div id="page3" class="page">
  <h2 id="selectedTopic"></h2>
  <p style="font-size:20px;">Enter or speak your query:</p>
  <textarea id="queryBox" placeholder="Type your question here..."></textarea><br>
  <button onclick="startVoiceInput()">üé§ Speak Query</button>
  <button onclick="processQuery()">Submit</button>
  <br><br>
  <input type="file" accept="image/*" id="imageInput">
  <p><i style="font-size:18px;">Upload a photo for analysis</i></p>
  <br>
  <button onclick="speakText('You can type or say your question, and even upload a photo')">üîä Voice Assist</button>
  <br><br>
  <button class="back-btn" onclick="goBack(2)">‚¨Ö Back</button>
  <div id="output"></div>
